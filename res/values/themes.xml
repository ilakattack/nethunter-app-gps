    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Nethunter.DesignTextInput" parent="Theme.Nethunter">
        <item name="android:height">72dp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>

    </style>

    <style name="Nethunter.AutocompleteInput" parent="Theme.Nethunter">
        <item name="android:height">72dp</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>

    </style>


    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

   <style name="Nethunter.NetworkInterfaceText" parent="Theme.Nethunter">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


