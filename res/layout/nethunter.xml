<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:animateLayoutChanges="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/iface_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:text="@string/hometitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nethunter_loading_layout"
            android:layout_marginTop="16dp">


            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/progress_loading"
                android:indeterminate="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_loading"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/progress_loading"
                tools:text="Loading interface and system information..."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginRight="16dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nethunter_current_interfaces"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/nethunter_current_interfaces"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nethunter_hid_detect"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/nethunter_hid_title"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nethunter_busybox_detect"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/nethunter_busybox_title"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/editTextBUSYBOX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingTop="8sp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:typeface="monospace"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nethunter_kernelver_detect"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/nethunter_kernel_version"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/editTextKERNELVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingTop="8sp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:typeface="monospace"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nethunter_terminal_detect"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/editTextNHTerminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingTop="8sp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:typeface="monospace"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:text="@string/nethunter_external_ip"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"
            android:id="@+id/nethunter_ext_ip_title"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:id="@+id/nethunter_ext_ip_layout"
            android:visibility="gone">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:inputType="none"
                android:paddingTop="8sp"
                android:gravity="center"
                android:text="@string/unknown"
                android:textSize="12sp"
                android:typeface="monospace"
                android:maxLines="1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/get_external_ip"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>

